<core:FragmentDefinition xmlns="sap.m" xmlns:f="sap.ui.layout.form" xmlns:core="sap.ui.core">
  <Dialog title="Create Order" draggable="true">
    <content>
      <f:SimpleForm editable="true" layout="ResponsiveGridLayout" labelSpanL="4" labelSpanM="4" emptySpanL="0" emptySpanM="0" columnsL="2" columnsM="2">
        <f:content>
          <Label text="Type of Item"/>
          <Input required="true" type="Text" value="" valueState="" valueStateText=""/>
          <Label text="Source"/>
          <Input required="true" type="Text" value="" valueState="" valueStateText=""/>
          <Label text="Destination"/>
          <Input required="true" type="Text" value="" valueState="" valueStateText=""/>
          <Label text="Cost"/>
          <Input required="true" type="Text" value="" valueState="" valueStateText=""/>
        </f:content>
      </f:SimpleForm>
    </content>
    <buttons>
      <Button text="Create" tooltip="Create" press="onCreateOrder"/>
      <Button text="Cancel" tooltip="Cancel" press="onCreateOrderCancel"/>
    </buttons>
  </Dialog>
</core:FragmentDefinition>
