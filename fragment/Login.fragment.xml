<core:FragmentDefinition xmlns="sap.m" xmlns:f="sap.ui.layout.form" xmlns:core="sap.ui.core">
  <Dialog title="Login Dialog" draggable="true">
    <content>
      <f:SimpleForm editable="true" layout="ResponsiveGridLayout" labelSpanL="4" labelSpanM="4" emptySpanL="0" emptySpanM="0" columnsL="2" columnsM="2">
        <f:content>
          <Label text="Email"/>
          <Input required="true" type="Text" value="" valueState="" valueStateText=""/>
          <Label text="Password"/>
          <Input required="true" type="Text" value=""  valueState="" valueStateText=""/>
        </f:content>
      </f:SimpleForm>
    </content>
    <buttons>
      <Button text="Employee" tooltip="Employee" press="onEmployeeLogin"/>
      <Button text="Manager" tooltip="Manager" press="onManagerLogin"/>
      <Button text="Cancel" tooltip="Cancel" press="onLoginCancel"/>
    </buttons>
  </Dialog>
</core:FragmentDefinition>
